<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top topNav">
        <div class="container">
            <div class="space"></div>
            <div class="topNav">
                <div class="logo">
                    <img src="~/Resources/logo.png" alt="theSite" />
                </div>
                <div class="contact">
                    @Html.Partial("_companyTelephoneInTopNav")
                </div>
            </div>
        </div>
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("关于我们", "Index", "Home")</li>
                    <li>@Html.ActionLink("咨询服务", "About", "Home")</li>
                    <li>@Html.ActionLink("新闻中心", "About", "Home")</li>
                    <li>@Html.ActionLink("营销培训", "About", "Home")</li>
                    <li>@Html.ActionLink("咨询服务", "About", "Home")</li>
                    <li>@Html.ActionLink("联系我们", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - theSite</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
