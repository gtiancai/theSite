<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(string.IsNullOrEmpty(ViewBag.Title) ? Html.Action("RenderSiteName", "CompanyInfo") : string.Format("{0} - {1}", ViewBag.Title, Html.Action("RenderSiteName", "CompanyInfo")))</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top topNav">
        @Html.Partial("TopNavBar")
    </div>
    <div class="container body-content">
        <div style="height:100%">
            @RenderBody()
        </div>
        <div >
            <footer style="float:left;">
                <p>&copy; @DateTime.Now.Year - @Html.Action("RenderSiteName", "CompanyInfo")</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
