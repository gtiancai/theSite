@model IEnumerable<theSite.Models.News>

@{
    ViewBag.Title = "News";
    // window.UEDITOR_HOME_URL = "/Content/UEditor";
}

<h2 style="text-align:center;">News</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Summary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedDateTime)
        </th>
        <th>Action</th>
    </tr>
@{int idx = 1; }
@foreach (var item in Model) {
    <tr>
        <td>@idx</td>
        <td>
            @Html.ActionLink(item.Title, "Details", new { id = item.ID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Summary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedDateTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("View", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
    idx++;
}
</table>


<p style="text-align:right;">
    @Html.ActionLink("Create New", "Create")
</p>